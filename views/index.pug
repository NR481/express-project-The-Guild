extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  h1 Start Your Next Adventure...

  h2 Action/Adventure Games
  div(class="games")
    each game in actionGames
      div(class="game")
        a(href=`/games/${game.id}`)
          img(src=`${game.image}`)

  h2 Sports Games
  div(class="games")
    each game in sportsGames
      div(class="game")
        a(href=`/games/${game.id}`)
          img(src=`${game.image}`)

  h2 Role Playing Games
  div(class="games")
    each game in rolePlayingGames
      div(class="game")
        a(href=`/games/${game.id}`)
          img(src=`${game.image}`)
